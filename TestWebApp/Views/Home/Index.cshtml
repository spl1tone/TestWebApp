@model List<Product>

<h1>All Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model) {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Count</td>
            </tr>
        }
    </tbody>
</table>
<form asp-action="AddProduct" method="post">
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>
